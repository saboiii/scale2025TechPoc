<mvc:View
  controllerName="project1.controller.Login"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
<VBox alignItems="Center" height="100%" justifyContent="Center">
    <Title text="Login" level="H2" />
    <Input id="usernameInput" placeholder="Username" width="100%" />
    <Input id="passwordInput" type="Password" placeholder="Password" />
    <Select id="roleSelect">
      <items>
        <core:Item key="admin" text="Admin" />
        <core:Item key="pilot" text="Pilot" />
      </items>
    </Select>
    <Button text="Login" type="Emphasized" press="onLoginPress" width="100%" />
  </VBox>
</mvc:View>
