<mvc:View
  controllerName="project1.controller.Overview"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core">
  <Panel headerText="Aircraft Overview">
    <List
      id="aircraftList"
      items="{/Aircraft}">
      <CustomListItem>
        <HBox justifyContent="SpaceBetween" alignItems="Center">
          <VBox>
            <Text text="Tail #: {tailNumber}" />
            <Text text="Model: {model}" />
            <Text text="Flight Hours: {flightHours}" />
            <Text text="Last Check: {lastCheck}" />
            <Text text="Next Check: {nextCheck}" />
          </VBox>
          <Button
            text="Schedule"
            press="onSchedulePress"
            enabled="{= !${_scheduled} }">
            <customData>
              <core:CustomData key="TailNumber" value="{tailNumber}" />
            </customData>
          </Button>
        </HBox>
      </CustomListItem>
    </List>
  </Panel>
</mvc:View>